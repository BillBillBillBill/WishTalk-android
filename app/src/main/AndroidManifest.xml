<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wishtalk" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme.WithoutActionBar" >
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".MainActivity"
            android:label="@string/app_name"/>

        <activity android:name=".RegisterActivity"
            android:label="@string/app_name"/>

        <activity android:name=".ForgetActivity"
            android:label="@string/app_name"/>

        <activity android:name=".WishPoolActivity"
            android:label="@string/app_name"/>

        <activity android:name=".UserCenterActivity"
            android:label="@string/app_name"/>

        <activity android:name=".ShakeItActivity"
            android:label="@string/app_name"/>

        <activity android:name=".WishActivity"
            android:label="@string/app_name"/>

        <activity android:name=".MakeWishActivity"
            android:label="@string/app_name"/>

        <activity android:name=".UserInfoActivity"
            android:label="@string/app_name"/>

        <activity android:name=".LaunchedWishActivity"
            android:label="@string/app_name"/>

        <activity android:name=".SupportedWishActivity"
            android:label="@string/app_name"/>

    </application>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
</manifest>
