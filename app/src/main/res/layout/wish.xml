<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wishtalk.WishActivity">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/rootLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsingToolbarLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:contentScrim="?attr/colorPrimary"
                app:expandedTitleMarginStart="30dp"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/header"
                    app:layout_collapseMode="parallax"
                    app:layout_collapseParallaxMultiplier="0.7" />

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:layout_collapseMode="pin"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                    app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

            </android.support.design.widget.CollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <TextView
                android:layout_height="55dp"
                android:layout_width="fill_parent"
                android:text="心愿详情"
                android:textSize="38dp"
                android:background="@drawable/background"
                android:layout_marginBottom="5dp"/>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="20dp"
                    android:text="用户号 ："
                    android:layout_marginBottom="5dp"/>
                <TextView
                    android:id="@+id/user_id"
                    android:layout_height="wrap_content"
                    android:layout_width="250dp"
                    android:textSize="20dp"
                    android:text="12345"
                    android:layout_marginBottom="5dp"/>
            </LinearLayout>


            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="20dp"
                    android:text="发起人 ："
                    android:layout_marginBottom="5dp"/>
                <TextView
                    android:id="@+id/originator"
                    android:layout_height="wrap_content"
                    android:layout_width="250dp"
                    android:textSize="20dp"
                    android:text="12345678901234567890"
                    android:layout_marginBottom="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="20dp"
                    android:text="名称     ："
                    android:layout_marginBottom="5dp"/>
                <TextView
                    android:id="@+id/title"
                    android:layout_height="wrap_content"
                    android:layout_width="250dp"
                    android:textSize="20dp"
                    android:text="忘记带伞"
                    android:layout_marginBottom="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="20dp"
                    android:text="内容     ："
                    android:layout_marginBottom="5dp"/>
                <TextView
                    android:id="@+id/content"
                    android:layout_height="wrap_content"
                    android:layout_width="340dp"
                    android:textSize="20dp"
                    android:text="忘记带伞了，希望有好心人能够送来，我在叉叉叉。。。"
                    android:minLines="5"
                    android:layout_marginBottom="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="20dp"
                    android:text="发布时间 ："
                    android:layout_marginBottom="5dp"/>
                <TextView
                    android:id="@+id/onTime"
                    android:layout_height="wrap_content"
                    android:layout_width="250dp"
                    android:textSize="20dp"
                    android:text="2016-01-11 17:11:00"
                    android:layout_marginBottom="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="20dp"
                    android:text="过期时间 ："
                    android:layout_marginBottom="5dp"/>
                <TextView
                    android:id="@+id/outTime"
                    android:layout_height="wrap_content"
                    android:layout_width="250dp"
                    android:textSize="20dp"
                    android:text="2016-02-17 17:11:50"
                    android:layout_marginBottom="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/text"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="20dp"
                    android:text="完成时间 ："
                    android:layout_marginBottom="5dp"
                    android:visibility="gone" />
                <TextView
                    android:id="@+id/finished_time"
                    android:layout_height="wrap_content"
                    android:layout_width="250dp"
                    android:textSize="20dp"
                    android:text="2016-02-17 17:11:50"
                    android:layout_marginBottom="5dp"
                    android:visibility="gone"
                    android:textIsSelectable="false" />
            </LinearLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="20dp"
                    android:text="所在位置 ："
                    android:layout_marginBottom="5dp"/>
                <TextView
                    android:id="@+id/loc"
                    android:layout_height="wrap_content"
                    android:layout_width="250dp"
                    android:textSize="20dp"
                    android:text="广州市，番禺区，大学城，中山大学，图书馆"
                    android:layout_marginBottom="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="20dp"
                    android:text="心愿状况 ："
                    android:layout_marginBottom="5dp"/>
                <TextView
                    android:id="@+id/status"
                    android:layout_height="wrap_content"
                    android:layout_width="250dp"
                    android:textSize="20dp"
                    android:text="finishing"
                    android:layout_marginBottom="5dp"/>
            </LinearLayout>
            <TextView
                android:layout_height="1dp"
                android:layout_width="fill_parent"
                android:background="#03d0ff"
                android:layout_marginBottom="5dp"/>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/back"
                    android:layout_height="40dp"
                    android:layout_width="50dp"
                    android:text="返回"
                    android:background="#03d0ff"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="45dp" />

                <ImageButton
                    android:id="@+id/heart"
                    android:layout_height="40dp"
                    android:layout_width="50dp"
                    android:src="@drawable/heart2"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="45dp"/>

                <Button
                    android:id="@+id/get"
                    android:layout_height="40dp"
                    android:layout_width="wrap_content"
                    android:background="#03d0ff"
                    android:text="接受/完成"
                    android:layout_marginBottom="5dp" />
            </LinearLayout>

            <TextView
                android:layout_height="1dp"
                android:layout_width="fill_parent"
                android:background="#03d0ff"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="评论列表:"
                android:textSize="25dp"
                android:layout_marginBottom="5dp"/>

            <ListView
                android:id="@+id/list_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <EditText
                android:id="@+id/comment"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="这个心愿不错嘛。。哈哈哈"
                android:layout_marginBottom="5dp"
                android:minLines="3"/>
            <Button
                android:id="@+id/submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发表评论"
                android:layout_marginBottom="5dp"/>

        </android.support.v4.widget.NestedScrollView>


    </android.support.design.widget.CoordinatorLayout>

    <include layout="@layout/navigation_view"/>

</android.support.v4.widget.DrawerLayout>
